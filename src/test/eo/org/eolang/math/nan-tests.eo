+package org.eolang.math
+alias org.eolang.math.nan
+junit

[] > nan-eq
  and. > @
    (nan.eq 42).eq FALSE
    (nan.eq nan).eq FALSE

[] > nan-neq
  and. > @
    (nan.neq 42).eq TRUE
    (nan.neq nan).eq TRUE

[] > nan-leq
  and. > @
    (nan.leq 42).eq FALSE
    (nan.leq nan).eq FALSE

[] > nan-greater
  and. > @
    (nan.greater 42).eq FALSE
    (nan.greater nan).eq FALSE

[] > nan-geq
  and. > @
    (nan.geq 42).eq FALSE
    (nan.geq nan).eq FALSE

[] > nan-mul
  and. > @
    (nan.mul 42).as-bytes.eq (nan.as-bytes)
    (nan.mul nan).as-bytes.eq (nan.as-bytes)

[] > nan-div
  and. > @
    (nan.div 42).as-bytes.eq (nan.as-bytes)
    (nan.div nan).as-bytes.eq (nan.as-bytes)

[] > nan-add
  and. > @
    (nan.add 42).as-bytes.eq (nan.as-bytes)
    (nan.add nan).as-bytes.eq (nan.as-bytes)

[] > nan-sub
  and. > @
    (nan.sub 42).as-bytes.eq (nan.as-bytes)
    (nan.sub nan).as-bytes.eq (nan.as-bytes)

[] > nan-signum
  eq. > @
    nan.signum.as-bytes
    nan.as-bytes

[] > nan-pow
  and. > @
    (nan.pow 2).as-bytes.eq (nan.as-bytes)
    (nan.pow nan).as-bytes.eq (nan.as-bytes)

[] > nan-abs
  eq. > @
    nan.abs.as-bytes
    nan.as-bytes

[] > nan-as-bytes
  eq. > @
    7F-C0-00-00
    nan.as-bytes

[] > nan-as-int
  eq. > @
    "You can't convert NaN to int"
    nan.as-int.msg

[] > nan-as-string
  eq. > @
    "NaN"
    nan.as-string