+alias org.eolang.hamcrest.assert-that
+alias org.eolang.math.arccos
+alias org.eolang.math.number
+alias org.eolang.math.pi
+home https://github.com/objectionary/eo-math
+junit
+package org.eolang.math
+version 0.0.0

[] > arccos-negative-one-test
  assert-that > @
    arccos -1.0
    $.equal-to
      pi

[] > arccos-zero-test
  assert-that > @
    arccos 0.0
    $.equal-to
      div.
        pi
        2.0

[] > arccos-one-test
  assert-that > @
    arccos 1.0
    $.equal-to
      0.0

[] > arccos-positive-calculated-test
  assert-that > @
    abs.
      seq
        minus. > val
          arccos 0.6
          0.927295
        number val
    $.less-than
      0.000001

[] > arccos-negative-calculated-test
  assert-that > @
    abs.
      seq
        minus. > val
          arccos -0.6
          2.214297
        number val
    $.less-than
      0.000001

[] > arccos-nan-positive-value-test
  assert-that > @
    is-nan.
      number (arccos 2.0)
    $.equal-to TRUE

[] > arccos-nan-negative-value-test
  assert-that > @
    is-nan.
      number (arccos -2.0)
    $.equal-to TRUE
